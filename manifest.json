{
  "manifest_version": 3,
  "name": "Viewport Resizer",
  "version": "1.0",
  "description": "Resize the website's viewport horizontally without resizing the browser window",
  "author": "Eugene Baranchuk <vencedor@gmail.com>",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "src/background.js"
  },
  "icons": {
    "16": "src/assets/icon_16.png",
    "32": "src/assets/icon_32.png",
    "48": "src/assets/icon_48.png",
    "128": "src/assets/icon_128.png"
  },
  "action": {
    "default_title": "Viewport Resizer"
  }
}
