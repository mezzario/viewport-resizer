{
  "manifest_version": 3,
  "name": "Viewport Resizer",
  "version": "1.0",
  "description": "Resize the website's viewport horizontally without resizing the browser window",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["resizer.js"]
    }
  ],
  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "action": {
    "default_icon": {
      "16": "icon_inactive_16.png",
      "32": "icon_inactive_32.png",
      "48": "icon_inactive_48.png",
      "128": "icon_inactive_128.png"
    },
    "default_title": "Viewport Resizer"
  },
  "background": {
    "service_worker": "background.js"
  }
}
