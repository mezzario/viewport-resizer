{
  "manifest_version": 3,
  "name": "Viewport Resizer",
  "version": "1.0",
  "description": "Resize the viewport horizontally without resizing the browser window",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "resizer.js"
      ]
    }
  ],
  "action": {},
  "background": {
    "service_worker": "background.js"
  }
}
